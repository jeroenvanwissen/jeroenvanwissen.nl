---
export interface Props {
	post: object;
}

const { post } = Astro.props;
---

<div class="bg-primary-200--5 shadow-md p-6 diagonal-corners">
  <h2 class="text-lg font-bold mb-2 text-primary-400">
    <a href={`/post/${post.slug}`}>
      {post.data.title}
    </a>
  </h2>
  <p class="text-md text-primary-50 opacity-60">
    {post.data.description}
  </p>
</div>
