---
import { getSortedCollection } from '@lib/util';
import Layout from '@layouts/Layout.astro';
import PostBlock from '@components/PostBlock.astro';

const recipes = await getSortedCollection('recipe');
---

<Layout>
  <Fragment slot="head">
    <title>Recipes by Jeroen van Wissen</title>
    <meta content="website" property="og:type" />
    <meta content="Recipes by Jeroen van Wissen" property="og:title" />
    <meta
      content="An overview of recipes by Jeroen van Wissen"
      name="description"
    />
    <meta
      content="An overview of recipes by Jeroen van Wissen"
      property="og:description"
    />
    <meta content={`${import.meta.env.SITE}/recipes`} property="og:url" />
    <meta
      content={`${import.meta.env.SITE}/images/og-image.webp`}
      property="og:image"
    />
    <meta
      content={`${import.meta.env.SITE}/images/og-image.webp`}
      property="twitter:image:src"
    />
    <link href={`${import.meta.env.SITE}/recipes`} rel="canonical" />
  </Fragment>
  <div class="w-full">
    <div class="mx-auto max-w-6xl px-8 py-4">
      <div
        class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-3"
      >
        {recipes.map((recipe) => <PostBlock post={recipe} type="recipe" />)}
      </div>
    </div>
  </div>
</Layout>
