---
import { getEntryBySlug } from 'astro:content';
import Layout from '../../components/Layout.astro';
import { generateCategories } from '../../utils/helpers';

const { slug } = Astro.params;
const post = await getEntryBySlug('blog', slug);
if (!post) return Astro.redirect("/404");
const { Content } = await post.render();
const meta = {
    title: `Jeroen van Wissen - ${post.data.title}`,
    description: post.data.description
}
---
<Layout title="Blog" meta={meta}>
    <div class="bg-gray-900 shadow-lg rounded-b mx-auto">
        <article class="md:px-2 py-2">
            <div class="md:p-2">
                    {/*<img class="lg:h-48 md:h-36 w-full bg-wissen-blue object-cover object-center scale-110 transition-all duration-400 hover:scale-100" src="" alt="">*/}
                    <div class="p-4 md:p-6">
                        <div class="md:flex items-center justify-between">
                            <div class="text-xs text-neutral-500 flex">{post.data.date.toLocaleString('en-US', {day: 'numeric', month: 'long', year: 'numeric', timeZone: 'Europe/Amsterdam'})}</div>							
                            <div class="text-xs text-neutral-500 flex pt-2 md:pt-0">
                                {generateCategories(post.data.categories).map(category => (
                                    <>
                                        <a href={`/category/${category.slug}`} class="hover:text-wissen-orange">{category.name}</a>&nbsp;
                                    </>
                                ))}
                            </div>
                        </div>
                        <h2>{post.data.title}</h2>
                        <p>{post.data.description}</p>
                        <Content />
                        <p>
                            <a href="/blog">&larr; back to all posts</a>
                        </p>
                    </div>
            </div>
        </article>
	</div>
</Layout>

<style is:global>
    article h2 {
        @apply mt-4 md:mt-6 text-base md:text-xl text-neutral-100 font-bold
    }
    article p {
        @apply mt-3 mb-4 text-neutral-200 text-justify
    }
    article a {
        @apply text-wissen-orange underline hover:text-wissen-blue
    }
    article .astro-code {
        @apply p-2 md:p-4 rounded-lg shadow border-neutral-600 border text-xs md:text-base
    }
</style>
