---
import { getSortedPostsByType } from "@lib/util";
import Layout from "@layouts/Layout.astro";
import PostBlock from "@components/PostBlock.astro";

const posts = await getSortedPostsByType("post", "blog");

const colors = ["primary", "secondary", "tertiary", "quaternary"];
const directions = ["left", "right"];
---

<Layout>
  <Fragment slot="head">
    <title>Blog posts by Jeroen van Wissen</title>
    <meta content="website" property="og:type" />
    <meta content="Blog posts by Jeroen van wissen" property="og:title" />
    <meta
      content="Overview of all blog posts by Jeroen van Wissen"
      name="description"
    />
    <meta
      content="Overview of all blog posts by Jeroen van Wissen"
      property="og:description"
    />
    <meta content={`${import.meta.env.SITE}/posts`} property="og:url" />
    <meta
      content={`${import.meta.env.SITE}/images/og-image.webp`}
      property="og:image"
    />
    <meta
      content={`${import.meta.env.SITE}/images/og-image.webp`}
      property="twitter:image:src"
    />
    <link href={`${import.meta.env.SITE}/posts`} rel="canonical" />
  </Fragment>
  <div class="w-full">
    <div class="mx-auto max-w-6xl px-8 py-4">
      <div class="text-white">
        <div class="text-xs">the quick brown fox jumps over the lazy dog</div>
        <div class="text-sm">the quick brown fox jumps over the lazy dog</div>
        <div class="text-md">the quick brown fox jumps over the lazy dog</div>
        <div class="text-base">the quick brown fox jumps over the lazy dog</div>
        <div class="text-lg">the quick brown fox jumps over the lazy dog</div>
        <div class="text-xl">the quick brown fox jumps over the lazy dog</div>
        <div class="text-2xl">the quick brown fox jumps over the lazy dog</div>
        <div class="text-3xl">the quick brown fox jumps over the lazy dog</div>
        <div class="text-4xl">the quick brown fox jumps over the lazy dog</div>
        <div class="text-logo-lg">the quick brown fox jumps over the lazy dog</div>
      </div>
    </div>
  </div>
</Layout>
