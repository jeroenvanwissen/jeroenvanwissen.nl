---
import { getSortedCollection } from '@lib/util';
import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import PostBlock from '@components/PostBlock.astro';

const posts = (await getSortedCollection('post')).slice(0, 3);
const photos = (await getSortedCollection('photo')).slice(0, 3);
const projects = (await getSortedCollection('project')).slice(0, 3);
---

<Layout>
  <Fragment slot="head">
    <title>Jeroen van Wissen - Full Stack Developer</title>
    <meta content="website" property="og:type" />
    <meta content="Jeroen van Wissen" property="og:title" />
    <meta
      content="Jeroen van Wissen - More than two decades of experience in development, including over five years as a Tech Lead/Engineering Manager"
      name="description"
    />
    <meta
      content="Jeroen van Wissen - More than two decades of experience in development, including over five years as a Tech Lead/Engineering Manager"
      property="og:description"
    />
    <meta content={import.meta.env.SITE} property="og:url" />
    <meta
      content={`${import.meta.env.SITE}/images/og-image.webp`}
      property="og:image"
    />
    <meta
      content={`${import.meta.env.SITE}/images/og-image.webp`}
      property="twitter:image:src"
    />
    <link href={import.meta.env.SITE} rel="canonical" />
  </Fragment>
  <div class="w-full bg-primary-950 border-b border-primary-900">
    <div class="max-w-6xl mx-auto px-4 md:px-8 lg:px-20">
      <div class="flex items-center gap-4 lg:gap-12">
        <Image
          src="/images/jeroenvanwissen.png"
          alt="Jeroen van Wissen"
          width={400}
          height={400}
          class="w-1/3 pt-4 md:pt-8 lg:pt-12"
        />
        <div class="w-2/3 flex items-center">
          <p
            class="text-base sm:text-xl md:text-4xl lg:text-6xl xl:text-9xl font-bold text-primary-400"
          >
            I'm <span class="text-primary-50">Jeroen</span>,<br />Full Stack
            Developer<br />from the Netherlands
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="w-full bg-quaternary-950 border-b border-quaternary-900">
    <div class="max-w-6xl mx-auto px-2">
      <div class="leading-6">
        <h2
          class="text-sm md:text-xl font-bold text-left text-quaternary-400 md:py-4"
        >
          .blog posts
        </h2>
      </div>
      {
        posts.length > 0 && (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2 sm:gap-4 lg:gap-6 pb-2 sm:pb-4 lg:pb-6">
            {posts.map((post) => (
              <PostBlock post={post} direction="left" type="blog" />
            ))}
          </div>
        )
      }
    </div>
  </div>
  <div class="w-full bg-tertiary-950 border-b border-tertiary-900">
    <div class="max-w-6xl mx-auto px-2">
      <div class="leading-6">
        <h2
          class="text-sm md:text-xl font-bold text-left text-tertiary-400 md:py-4"
        >
          .projects
        </h2>
      </div>
      {
        projects.length > 0 && (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2 sm:gap-4 lg:gap-6 pb-2 sm:pb-4 lg:pb-6">
            {projects.map((project) => (
              <PostBlock post={project} direction="right" type="project" />
            ))}
          </div>
        )
      }
    </div>
  </div>
  <div class="w-full bg-secondary-950 border-b border-secondary-900">
    <div class="max-w-6xl mx-auto px-2">
      <div class="leading-6">
        <h2
          class="text-sm md:text-xl font-bold text-left text-secondary-400 md:py-4"
        >
          .photography
        </h2>
      </div>
      {
        photos.length > 0 && (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2 sm:gap-4 lg:gap-6 pb-2 sm:pb-4 lg:pb-6">
            {photos.map((photo) => (
              <PostBlock post={photo} direction="left" type="photo" />
            ))}
          </div>
        )
      }
    </div>
  </div>
</Layout>
