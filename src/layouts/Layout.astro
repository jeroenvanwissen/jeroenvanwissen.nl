---
import Socials from '@components/Socials.astro';
import FotografieLogo from '@components/FotografieLogo.astro';
import WissenLogo from '@components/WissenLogo.astro';
import '@style/main.css'
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width">
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<script defer data-domain={import.meta.env.SITE.replace('https://', '')} src="https://plausible.public-void.nl/js/plausible.js"></script>
		<meta content="@jvwissen" name="twitter:creator">
		<meta content="summary_large_image" name="twitter:card">
		<slot name="head" />
	</head>
<body class="bg-gradient-to-bl from-indigo-900 via-wissen-blue to-indigo-900">
	<div class="w-full antialiased px-4">
		<nav class="max-w-6xl mx-auto">
			<div class="md:flex md:flex-wrap items-center md:justify-between">
				<div class="flex justify-center">
					<a href="/" class="py-4 no-underline inline-block mx-auto" aria-label="Jeroen van Wissen"><WissenLogo /></a>
				</div>
				<ul class="flex justify-center list-reset w-full md:w-auto py-4 md:py-0">
					<li><a href="/" class="px-2 no-underline text-white hover:text-wissen-orange text-2xl md:text-base">home</a></li>
					<!-- <li><a href="/" class="px-2 no-underline text-white hover:text-wissen-orange text-2xl md:text-base">about</a></li> -->
					<li><a href="/blog" class="px-2 no-underline text-white hover:text-wissen-orange text-2xl md:text-base">blog</a></li>
					<li><a href="https://31f-fotografie.nl" class="px-2 no-underline text-white hover:text-wissen-orange text-2xl md:text-base">photography</a></li>
					<!-- <li><a href="/recipes" class="px-2 no-underline text-white hover:text-wissen-orange text-2xl md:text-base">recipes</a></li> -->
				</ul>
			</div>
		</nav>
		<div class="mb-6 max-w-6xl mx-auto">
			<div class="flex items-center h-6 rounded-t bg-gray-100 border-b border-gray-500 text-center text-black">
				<div class="flex ml-2 items-center text-center border-red-900 bg-red-500 shadow-inner rounded-full w-3 h-3"></div>
				<div class="ml-2 border-yellow-900 bg-yellow-500 shadow-inner rounded-full w-3 h-3"></div>
				<div class="ml-2 border-green-900 bg-green-500 shadow-inner rounded-full w-3 h-3"></div>
				<div class="mx-auto pr-16" id="terminaltitle">
					<p class="text-center text-sm text-neutral-900"><slot name="title" /></p>
				</div>
			</div>
			<slot />
		</div>
		<footer class="max-w-6xl mx-auto mb-4">
			<div class="flex justify-center">
				<div class="bg-neutral-900/50 p-2 mb-2 rounded shadow-lg text-center md:flex md:gap-x-4">
					<Socials className="fill-gray-200 hover:fill-wissen-orange hover:scale-110 h-12 pb-2 md:h-8 md:pb-0" />
					<a href="https://31f-fotografie.nl" title="31F Fotografie"><FotografieLogo className="fill-gray-200 hover:fill-wissen-orange hover:scale-110 h-12 pb-2 md:h-8 md:pb-0" /></a>
				</div>
			</div>
		</footer>
	</div>
</body>
</html>
