{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@lib/*": ["src/lib/*"],
            "@style/*": ["src/style/*"]
        }
    },
    "extends": "astro/tsconfigs/strict"
}
